<Window x:Class="Threads___FavIcon___WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Threads___FavIcon___WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <ListView Name="ListBox1Websites" HorizontalAlignment="Left" Margin="25,35,0,0" VerticalAlignment="Top" Width="180" Height="180"/>
        <Button Name="downloadButton" Content="Download Icons" HorizontalAlignment="Left" Margin="239,35,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="buttonDownload_ClickAsync"/>
        <Button Name="stopDownload" Content="Stop Download" HorizontalAlignment="Left" Margin="239,85,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="stopDownload_Click"/>
        <Button Name="clearIcons" Content="Clear Icons" HorizontalAlignment="Left" Margin="239,185,0,0" VerticalAlignment="Top" Width="120" Height="30" />
        <Image Name="picture" HorizontalAlignment="Left" Height="50" Margin="444,279,0,0" VerticalAlignment="Top" Width="50"/>
        <StackPanel x:Name="stackPanelImages" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,200,0,0">
            <StackPanel Width="300" Height="166" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-500,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
