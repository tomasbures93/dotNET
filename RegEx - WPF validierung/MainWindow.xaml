<Window x:Class="RegEx___WPF_validierung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegEx___WPF_validierung"
        mc:Ignorable="d"
        Title="RegEx übung" Height="500" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Name" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="nameInput" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" KeyUp="nameInput_KeyUp" Grid.Row="0" Grid.ColumnSpan="2"/>
        <Label x:Name="validierungName" Content="" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="2"/>

        <Label Content="E-Mail" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="emailInput" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Grid.Row="1" KeyUp="emailInput_KeyUp" Grid.ColumnSpan="2"/>
        <Label x:Name="validierungEmail" Content="" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="2"/>

        <Label Content="Telefon" HorizontalAlignment="Center" Margin="0,10, 0,0" VerticalAlignment="Top" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="telefonInput" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Grid.Row="2" KeyUp="telefonInput_KeyUp" Grid.ColumnSpan="2"/>
        <Label x:Name="validierungTelefon" Content="" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Grid.Row="2" Grid.ColumnSpan="2"/>

        <Label Content="IPv4" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Grid.Row="3" Grid.ColumnSpan="2"/>
        <TextBox x:Name="ipInput" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Grid.Row="3" KeyUp="ipInput_KeyUp" Grid.ColumnSpan="2"/>
        <Label x:Name="validierungIp" Content="" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Grid.Row="3" Grid.ColumnSpan="2"/>

        <Button Content="Save" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Height="50" Width="100" Grid.Row="4" Click="Button_Click" Grid.Column="0"/>
        <Button Grid.Column="1" Content="Clear" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="100" Margin="0,0,0,0" Grid.Row="4" Click="Button_Click_1"/>

    </Grid>
</Window>
